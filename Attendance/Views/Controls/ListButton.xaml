<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Denomination.Views.Controls.ListButton">
    <Grid HeightRequest="120">
        <Grid x:Name="grid">
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label x:Name="CountLabel" Text="0" TextColor="#fff" FontSize="Default" VerticalOptions="Center" HorizontalOptions="Center" />
            </Grid>
            <Grid Grid.Row="1">
                <Label x:Name="NameLabel" TextColor="#fff" FontSize="Default" VerticalOptions="Center" HorizontalOptions="Center" />
            </Grid>
        </Grid>
        <Grid>
            <Grid.GestureRecognizers>
                <TapGestureRecognizer x:Name="GridButton" Tapped="TapGestureRecognizer_TappedAsync" />
            </Grid.GestureRecognizers>
        </Grid>
    </Grid>
</ContentView>